<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.esgi.iaitmansour.myfoot.TerrainActivity"
        android:background="@drawable/terrain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <Button
        android:id="@+id/btnValider"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="@drawable/roundcorner"
        android:drawableTop="@drawable/done"
        android:paddingTop="10dp"
        android:textColor="#fff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/player12"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
             />

        <Button
            android:id="@+id/player2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/player12"
            android:layout_alignParentStart="true"
            android:layout_marginStart="89dp" />

        <Button
            android:id="@+id/player3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/player12"
            android:layout_alignStart="@+id/player10"
            android:layout_marginStart="24dp" />

        <Button
            android:id="@+id/player4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/player2"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="35dp" />

        <Button
            android:id="@+id/player5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBaseline="@+id/player4"
            android:layout_alignBottom="@+id/player4"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp" />

        <Button
            android:id="@+id/player6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/player4"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/player8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/player4"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/player7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignStart="@+id/player5"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/player9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_above="@+id/player7"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="34dp" />

        <Button
            android:id="@+id/player11"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="104dp"
            android:layout_toEndOf="@+id/player8" />

        <Button
            android:id="@+id/player10"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBaseline="@+id/player11"
            android:layout_alignBottom="@+id/player11"
            android:layout_toStartOf="@+id/player7" />
    </RelativeLayout>

</LinearLayout>

